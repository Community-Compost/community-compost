extends layout

block content
    // Marketing messaging and featurettes
    // Wrap the rest of the page in another container to center all the content.
    .container.marketing
      // START THE FEATURETTES
      .row.featurette.first
        .col-md-8.col-xs-12
          h2.featurette-heading
            | Feed the soil.
            div.sub 
              | Sustain the future.
          p.lead
            | Compost Dention is a community curbside composting service in Denton, TX.
            div.btn.btn-success.pull-right.sign-up
              | Sign Up now!
        .col-md-4.col-xs-12.top-img
          img.featurette-image.img-responsive(src='/images/logo.png')
          div.captions
            div.cap.caption1.lead
              span.header
                | Step 1: 
              | Sign up and collect compostables at home.
            div.cap.caption2.lead(style='display:none')
              span.header
                | Step 2: 
              | We pick up your compostables weekly.
            div.cap.caption3.lead(style='display:none')
              span.header
                | Step 3: 
              | You benefit when high quality compost is returned to our community.

      hr.featurette-divider

      // Three columns of text below the carousel
      .row
        .col-lg-4
          img.img-circle(src='/images/icon1.png')
          h3 Connect
          p
            | Sign up by clicking the button below. We will send you an empty bin so you can start collecting compostables right away.
          p
            a.btn.btn-success(href='#', role='button') Sign up Now!
        // /.col-lg-4
        .col-lg-4
          img.img-circle(src='/images/icon2.png')
          h3 Pickup
          p
            | We will pickup your compostables or you can drop them off yourself. If you like, you can trade in your compostables for completed compost!
          p
            a.btn.btn-success(href='#', role='button') Be Green
        // /.col-lg-4
        .col-lg-4
          img.img-circle(src='/images/icon3.png')
          h3 Community
          p
            | We donate compost to local gardens, who use it to fertilize their soil. Local gardens grow food and sustain our community.
          p
            a.btn.btn-success(href='#', role='button') Learn More
        // /.col-lg-4
      // /.row


      hr.featurette-divider
      .row.featurette.topsoil
        .col-md-5
          img.featurette-image.img-responsive(data-src='holder.js/500x500/auto', alt='Generic placeholder image')
        .col-md-7
          h2.featurette-heading
            | Why Compost?
            div.sub See for yourself.
          p.lead
            | Nearly 30% of landfill waste is compostable - Reduce waste - Support local farms and gardens
            div.btn.btn-success(href='#', role='button') Buy A Compost Bin
      hr.featurette-divider
      .row.featurette
        .col-md-7
          h2.featurette-heading
            | Educate Yourself
            div.sub Links and Resources
          ol
            li
              | Once a week, we gather up compostable waste of food scraps and yard clippings (2.5 gal) from residents and small business.  
            li
              | We take the compostable waste to 14.5 acre garden (composting site)
            li
              | When it is ready, we donate it to local urban farms, who use it to fertilize their soil.  They grow food and give back to the community. (LOOP)
          div.btn.btn-success.pull-right(href='#', role='button') Learn More
 

        .col-md-5
          img.featurette-image.img-responsive(data-src='holder.js/500x500/auto', alt='Generic placeholder image')

      hr.featurette-divider
      // /END THE FEATURETTES

      // FOOTER
      footer
        p.pull-right
          a(href='#') Back to top
        p
          | © 2013 Company, Inc. ·
          a(href='#') Privacy
          | ·
          a(href='#') Terms
    // /.container
    // Bootstrap core JavaScript
    // Placed at the end of the document so the pages load faster
    script(src='https://code.jquery.com/jquery-1.10.2.min.js')
    script(src='/javascripts/bootstrap.min.js')
    script(src='bootstrap_orig/js/carousel.js')
    script(src='/javascripts/holder.js')
