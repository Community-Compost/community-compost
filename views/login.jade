extends layout

block content 
  .row
    .col-md-6
      h1
        span.fa.fa-sign-in
        | &nbsp;&nbsp;Login
      hr
      if (message.length > 0)
        .alert.alert-danger
          | #{message}
      form(action='/login' method='post')
        .form-group
          label E-Mail
          input.form-control(type='text' name='email')
        .form-group
          label Password
          input.form-control(type='password' name='password')
        button.btn.btn-primary.btn-lg(type='submit') Login
      hr
      p Need an Account?
        a(ahref='/register')  Register