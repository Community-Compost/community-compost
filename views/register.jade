extends layout

block content
  .row
    if (message.length > 0)
      .alert.alert-danger
        | #{message}
    .col-md-6.col-md-offset-3.well
      h1
        span.fa.fa-sign-in
        | &nbsp;&nbsp;Register
      hr
      form(action='/register' method='post')
        .form-group
          label E-Mail
          input.form-control(type='text' name='email')
        .form-group
          label Password
          input.form-control(type='password' name='password')
        //- .form-group
        //-   label Confirm Password
        //-   input.form-control(type='password' name='')
        button.btn.btn-primary.btn-lg(type='submit') Register
      hr

      p Already have an account?
        a(href='/login')  Login