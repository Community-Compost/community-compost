extends layout

block content
  .row
    .col-md-6
      h1
        span.fa.fa-sign-in
        | &nbsp;&nbsp;Register
      h3 Almost Done!
      hr
      if (message.length > 0)
        .alert.alert-danger
          | #{message}
      form(action='/register/#{id}' method='post')
        .form-group
          label Name
          input.form-control(type='text' name='name')
        .form-group
          label Street Address
          input.form-control(type='text' name='address')
        .form-group
          label Zip Code
          input.form-control(type='text' name='zip_code')
        .form-group
          label How many people live here?
          input.form-control(type='text' name='residents')
        button.btn.btn-primary.btn-lg(type='submit') Register
      hr

      p Already have an account?
        a(href='/login')  Login